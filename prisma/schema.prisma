generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  artist
}

model user{
  user_id   String @id @default(uuid())
  name  String
  email   String @unique
  psswd   String
  google_id   String? @unique
  biography   String?
  role  Role @default(user)
  created_at  DateTime @default(now())
}

model user_follows {
  follower_id   String @id @default(uuid())
  followed_id   String
}

model password_reset {
  psswd_id  String @id @default(uuid())
  user_id   String
  token   String
  expires_at  DateTime
  used  Boolean @default(false)
}

model social_media {
  sm_id   String @id @default(uuid())
  user_id   String
  url   String
}